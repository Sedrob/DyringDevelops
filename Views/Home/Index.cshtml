@using Test.Models
@model Test.Models.DataBaseViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <hr />
    <section class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h2>Расчет сушки древесины</h2>
            </div>
			<form method="post" asp-action="Index">
				<div class="col-12">
					<p> Кол-во камер <input asp-for="CamerValue" type="number" size="2" name="camerValue" min="2" max="20" value="5"> </p>
				</div>
				
				<div class="form-group text-center">
					<input type="submit" asp-action="Index" class="btn btn-primary" />
				</div>
			</form>
			
        </div>

    </section>
</div>
