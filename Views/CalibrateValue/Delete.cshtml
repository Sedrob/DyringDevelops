@model Test.PlanDrying 
@{
	ViewBag.Title = "Удаление пользователя";
}

<div>
	<dl class="dl-horizontal">
		<dt>План</dt>
		<dd>
			@Html.DisplayFor(model => model.Id)
		</dd>
		<dt>Количество камер</dt>
		<dd>
			@Html.DisplayFor(model => model.ValueChamber)
		</dd>

		<dt>Месяц</dt>
		<dd>
			@Html.DisplayFor(model => model.MonthDrying)
		</dd>
		<dt>Нагрзука</dt>
		<dd>
			@Html.DisplayFor(model => model.HoursLeftDrying)
		</dd>

	</dl>

	<div>
		<form asp-controller="CalibrateValue" asp-action="Delete" method="post">
			<div class="form-group">
				<input type="submit" class="btn btn-default" value="Удалить" />
			</div>
		</form>
	</div>
</div>
